pipeline {

    agent {
        docker {
            image 'node:8.16.0-alpine'
        }
    }

    stages {
        stage('Build') {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling app'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Running Unit tests'
                dir('result') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed successfully'
        }
    }
}
